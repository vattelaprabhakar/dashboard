        <div class="btn btn-default btn-rounded"><span class="glyphicon glyphicon-plus" style="font-size: 18px;" data-original-title="AddUser"></span></div>
        <div class="table-responsive" style="margin-top:20px;">*@
    <h3 class="text-muted text-left font-18 "><b class="btn-warning">Lead Product </b></h3>
    <div class="row">
        <div class="col-md-12">
            @* <div class="btn btn-default btn-rounded"><span class="glyphicon glyphicon-user" style="font-size: 13px;" data-original-title="AddUser"> @Html.ActionLink("AddProduct","AddProduct")</span></div>*@
            <a class="btn btn-info btn-rounded" href="/PropProduct/AddProduct"><span class="glyphicon glyphicon-plus">AddProduct</span></a>
            <div class="table-responsive">
                <table id="myTable" class="table table-striped table-bordered nowrap" style="width: 100%">
                    <thead>
                        <tr class="danger">
                            <th></th>
                            <th>ProductName</th>
                            <th>ProductCost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="active">
                                <td>
