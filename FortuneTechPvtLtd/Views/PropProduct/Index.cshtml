                                <div class="btn btn-danger btn-rounded"><span class="glyphicon glyphicon-trash" style="font-size: 13px;" data-original-title="Delete">@Html.ActionLink("Delete","Delete",new{id=item.productid},new { onclick="return confirm('Are you sure you want to delete?');"}) </span></div>*@
                                    <a class="btn btn-info btn-rounded mr-1" href="/PropProduct/Edit/@item.productid"><span class="glyphicon glyphicon-edit" id="edit"></span></a>
                                    <a class="btn btn-danger btn-rounded mr-1" href="/PropProduct/Delete/@item.productid" onclick="return confirm('Are you sure you want to delete?')"><span class="glyphicon glyphicon-trash" id="delete"></span></a>
                                </td>
                                <td>@Html.DisplayFor(m => item.productname)</td>
                                <td>@Html.DisplayFor(m => item.productcost)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
