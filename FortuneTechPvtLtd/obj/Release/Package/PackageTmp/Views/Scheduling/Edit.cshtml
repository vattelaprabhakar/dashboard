    <script type="text/javascript">
        $(document).ready(function () {
            $("#campstartdate").datepicker();
            $("#campenddate").datepicker();

            //Allow users to enter numbers only
            $("#productcost").bind('keypress', function (e) {
                if (e.keyCode == '9' || e.keyCode == '16') {
                    return;
                }

                var code;
                if (e.keyCode) code = e.keyCode;
                else if (e.which) code = e.which;
                if (e.which == 46)
                    return false;
                if (code == 8 || code == 46)
                    return true;
                if (code < 48 || code > 57)
                    return false;

            });

            //Disable paste
            $("#productcost").bind("paste", function (e) {
                e.preventDefault();
            });

            $("#productcost").bind('mouseenter', function (e) {
                var val = $(this).val();
                if (val != '0') {
                    val = val.replace(/[^0-9]+/g, "")
                    $(this).val(val);
                }
            });
            $("#btnsubmit").click(function () {

                if ($("#campname").val() == "") {
                    alert("Please Enter Campaign Name");
                    return false;
                }
                if ($("#campstartdate").val() == "") {
                    alert("Please Select Campaign Start Date");
                    return false;
                }
                if ($("#campenddate").val() == "") {
                    alert("Please Select Campaign End Date");
                    return false;
                }
                //product
                var campproduct = $('#campproduct option:selected').text();
                if (campproduct == 'Select') {
                    alert('Please Select Product');
                    return false;
                }
                else {
                    $("#hdncampproduct").val(campproduct);
                }
                //camp status
                var campstatus = $('#campstatus option:selected').text();
                if (campstatus == 'Select') {
                    alert('Please Select Status');
                    return false;
                }
                else {
                    $("#hdncampstatus").val(campstatus);
                }

