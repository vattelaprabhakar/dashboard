                //clear all textboxes
                $("input:text").val("");
                //clear all dropdown set to -select- as default
                $('select option:contains("All")').prop('selected', true);
            });

            $("#btnsubmit").click(function () {
                $('#datatablediv').show();
                var fromdate = $("#FromDate").val();
                var todate = $("#ToDate").val();
                var leadowner = $("#username").val();
